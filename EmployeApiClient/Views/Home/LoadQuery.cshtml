            $(".Selecterdescription").text(message);

        }

        function elementMessage() {
            var selectedOption = $("#Elementvalue").val();
            var message = "";
            switch (selectedOption) {
                case "":
                    message = "Please select a jQuery selector";
                    break;
                case "h1":
                    message = "Selects All The elements type: h1";
                    break;
                case "p":
                    message = "Selects All The elements type: p";
                    break;
                case "span":
                    message = "Selects All The elements type: span";
                    break;
                case "h3":
                    message = "Selects All The elements type: h3";
                    break;
                case "b":
                    message = "Selects All The elements type: b";
                    break;
                case "li":
                    message = "Selects All The elements type: li";
                    break;
                case "ul":
                    message = "Selects All The elements type: ul";
                    break;
                default:
                    message = "";
            }
            $(".Selecterdescription").text(message);
        }

        function attributeMessage(radiovalue) {
            var message = "";
            switch (radiovalue) {
                case "":
                    message = "Please select a jQuery selector";
                    break;
                case "[id]":
                    message = "All elements with an id attribute.";
                    break;
                case "[id=my-Address]":
                    message = "The element with an id attribute of 'my-Address'.";
                    break;
                case "p[id!=my-Address]":
                    message = "All <p> elements without an id attribute value equal to (my - Address).Note: Also <p> elements with no id attribute at all.";
                    break;
                case "[id$=ess]":
                    message = "All elements with an id attribute that ends with 'ess'.";
                    break;
                case "[id|=my]":
                    message = "All elements with an id attribute value equal to (my) or starting with my followed by a hyphen (-)";
                    break;
                case "[id^=L]":
                    message = "All elements with an id attribute that starts with 'L'.";
                    break;
                case "[title~=beautiful]":
                    message = "All elements with a title attribute that contains the word 'beautiful'.";
                    break;
                case "[id*=s]":
                    message = "All elements with an id attribute that contains the letter 's'.";
                    break;
                case "[id*=s]":
                    message = "All elements with an id attribute containing the letter 's'.";
                    break;
                case "[lang='it']":
                    message = "All elements with a lang attribute equal to 'it'.";
                    break;
                case "[title='Hello beautiful']":
                    message = "All elements with a title attribute equal to 'Hello beautiful'.";
                    break;
                case 'label[for="name"]':
                    message = "All <label> elements with a for attribute equal to 'name'.";
                    break;
                case 'input[type="text"]':
                    message = "All <input> elements with a type attribute equal to 'text'.";
                    break;
                case 'input[type="email"]':
                    message = "All <input> elements with a type attribute equal to 'email'.";
                    break;
                case 'input[type="password"]':
                    message = "All <input> elements with a type attribute equal to 'password'.";
                    break;
                case 'input[type="radio"]':
                    message = "All <input> elements with a type attribute equal to 'radio'.";
                    break;
                case 'input[type="checkbox"]':
                    message = "All <input> elements with a type attribute equal to 'checkbox'.";
                    break;
                case 'select[multiple]':
                    message = "All <select> elements with a multiple attribute.";
                    break;
                case 'option[value="Donald"]':
                    message = "All <option> elements with a value attribute equal to 'Donald'.";
                    break;
                case 'option[value="Mickey"]':
                    message = "All <option> elements with a value attribute equal to 'Mickey'.";
                    break;
                case 'option[value="Goofy"]':

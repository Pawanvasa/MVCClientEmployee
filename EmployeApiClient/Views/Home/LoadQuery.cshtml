    <script>
        $(document).ready(function () {
            $('input[type="radio"]').click(function () {
                var inputValue = $(this).attr("class");
                var targetBox = $("." + inputValue);
                var radiovalue = $(this).attr("value");
                $(".box").not(targetBox).hide();
                $(targetBox).show();
                attributeSelectors(radiovalue);
                attributeMessage(radiovalue);
                $(".Selecterdescription").text("");
            });
        });
        function idselectors() {
            var id = $("#valueofId").val();
            $(".highlighted").removeClass("highlighted");
            $("#" + id).addClass("highlighted");
        }

        function classSelector() {
            var cls = $("#classvalue").val();
            $(".highlighted").removeClass("highlighted");
            $("." + cls).addClass("highlighted");
        }
        function ElementSelectors() {
            var element = $("#Elementvalue").val();
            $(".divs .highlighted").removeClass("highlighted");
            $(".divs " + element).addClass("highlighted");
        }
        function attributeSelectors(radiovalue) {
            $(".divs .highlighted").removeClass("highlighted");
            $(".divs " + radiovalue).addClass("highlighted");
        }

        function displayMessage() {
            var selectedOption = $("#valueofId").val();
            var selectedOptionAttribute = $("#attributevalue").val();
            var message = "";
            switch (selectedOption) {
                case "":
                    message = "Please select a jQuery selector";
                    break;
                case "div1":
                    message = "Select Elements with an id attribute value containing div1";
                    break;
                case "div2":
                    message = "Select Elements with an id attribute value containing div2";
                    break;
                case "div3":
                    message = "Select Elements with an id attribute value containing div3";
                    break;
                case "div4":
                    message = "Select Elements with an id attribute value containing div4";
                    break;
                case "div5":
                    message = "Select Elements with an id attribute value containing div5";
                    break;
                default:
                    message = "";
            }
            $(".Selecterdescription").text(message);
        }

        function classMessage() {
            var selectedOption = $("#classvalue").val();
            var message = "";
            switch (selectedOption) {
                case "":
                    message = "Please select a jQuery selector";
                    break;
                case "Class1":
                    message = "Select Elements with a class attribute value of Class1";
                    break;
                case "Class2":

<script>
    $(function () {



        $('input[name="selector"]').click(function () {
            var selector = $(this).val();
            var url = "";

            if (selector == "1") {
                selectorView = "Element";

            } else if (selector == "2") {
                selectorView = "Class";
            }
            else if (selector == "3") {
                selectorView = "Id";
            }
            else if (selector == "4") {
                selectorView = "First";
            }
            else if (selector == "5") {
                selectorView = "Last";
            }
            else if (selector == "6") {
                selectorView = "FirstChild";
            }
            else if (selector == "7") {
                selectorView = "LastChild";
            }
            else if (selector == "8") {
                selectorView = "NthChild";
            }
            else if (selector == "9") {
                selectorView = "NthLastChild";
            }
            else if (selector == "10") {
                selectorView = "Even";
            }
            else if (selector == "11") {
                selectorView = "Odd";
            }
            else if (selector == "12") {
                selectorView = "FirstOfType";
            }
            else if (selector == "13") {
                selectorView = "LastOfType";
            }
            else if (selector == "14") {
                selectorView = "NthOfType";
            }
            else if (selector == "15") {
                selectorView = "NthLastOfType";
            }
            else if (selector == "16") {
                selectorView = "OnlyOfType";
            }
            else if (selector == "17") {
                selectorView = "OnlyChild";
            }
            else if (selector == "18") {
                selectorView = "MixElements";
            }
            else if (selector == "19") {
                selectorView = "ParentChild";
            }
            else if (selector == "20") {
                selectorView = "ElementNext";
            }
            else if (selector == "21") {
                selectorView = "ElementSiblings";
            }
            else if (selector == "22") {
                selectorView = "Header";
            }
            else if (selector == "23") {
                selectorView = "Contains";
            }
            else if (selector == "24") {
                selectorView = "Has";
            }
            else if (selector == "25") {
                selectorView = "Empty";
            }
            else if (selector == "26") {
                selectorView = "Parent";
            }
            else if (selector == "27") {
                selectorView = "Visible";
            }
            else if (selector == "28") {
                selectorView = "Input";
            }
            else if (selector == "29") {
                selectorView = "Text";
            }
            else if (selector == "30") {
                selectorView = "Radio";
            }
            else if (selector == "31") {
                selectorView = "Checkbox";
            }
            else if (selector == "32") {
                selectorView = "Submit";
            }

            $.ajax({

                url: "/Comman/Getpartial?selectView=" + selectorView,
                type: "GET",
                success: function (data) {

                    $('#flex-child-right').html(data);

                },
                error: function (xhr, textStatus, errorThrown) {
                    alert(textStatus);
                    console.log(textStatus + ": " + errorThrown);
                }
            });
        });

    });


</script>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="script.js"></script>
    <title>JQuery Selectors</title>
    <link rel="stylesheet" href="style.css">
</head>

<body>

    <h3 style="text-align:center;background-color: #3445b4;color:white;margin-left:2rem;margin-top:0.5rem;margin-right:0.5rem"> Jquery Selectors </h3>

    <div class="flex-container">

        <div class="flex-child left scrollbar scrollbar-primary">
            <div class="input-box ">

                <input type="radio" id="element" name="selector" value="1">
                <label for="element">element</label><br>
                <input type="radio" id="class" name="selector" value="2">
                <label for="class">.class</label><br>
                <input type="radio" id="Id" name="selector" value="3">
                <label for="Id">#id</label><br>

                <input type="radio" id=":first" name="selector" value="4">
                <label for="age3">:first </label><br>
                <input type="radio" id="class" name="selector" value="5">
                <label for="age2">:last </label><br>
                <input type="radio" id="Id" name="selector" value="6">
                <label for="age1">:first-child </label><br>

                <input type="radio" id="element" name="selector" value="7">
                <label for="age3">:last-child </label><br>
                <input type="radio" id="class" name="selector" value="8">
                <label for="age2">:nth-child(n) </label><br>
                <input type="radio" id="Id" name="selector" value="9">
                <label for="age1">:nth-last-child(n) </label><br>

                <input type="radio" id="element" name="selector" value="10">
                <label for="element">:even</label><br>
                <input type="radio" id="class" name="selector" value="11">
                <label for="class">:odd</label><br>
                <input type="radio" id="Id" name="selector" value="12">
                <label for="Id">:first-of-type</label><br>

                <input type="radio" id="element" name="selector" value="13">
                <label for="age3">:last-of-type </label><br>
                <input type="radio" id="class" name="selector" value="14">
                <label for="age2">:nth-of-type(n) </label><br>
                <input type="radio" id="Id" name="selector" value="15">
                <label for="age1">:nth-last-of-type(n)</label><br>

                <input type="radio" id="element" name="selector" value="16">
                <label for="age3">:only-of-type </label><br>
                <input type="radio" id="class" name="selector" value="17">
                <label for="age2">:only-child </label><br>
                <input type="radio" id="Id" name="selector" value="18">
                <label for="age1">el1,el2,el3 </label><br>

                <input type="radio" id="element" name="selector" value="19">
                <label for="element">parent > child</label><br>
                <input type="radio" id="class" name="selector" value="20">
                <label for="class">element + next</label><br>
                <input type="radio" id="Id" name="selector" value="21">
                <label for="Id">element ~ siblings</label><br>

                <input type="radio" id="class" name="selector" value="22">
                <label for="class">:header</label><br>
                <input type="radio" id="Id" name="selector" value="23">
                <label for="Id">:contains(text)</label><br>

                <input type="radio" id=":first" name="selector" value="24">
                <label for="age3">:has(selector)</label><br>
                <input type="radio" id="class" name="selector" value="25">
                <label for="age2">:empty </label><br>
                <input type="radio" id="Id" name="selector" value="26">
                <label for="age1">:parent</label><br>

                <input type="radio" id="element" name="selector" value="27">
                <label for="age3">:visible</label><br>
                <input type="radio" id="class" name="selector" value="28">
                <label for="age2">:input</label><br>
                <input type="radio" id="Id" name="selector" value="29">
                <label for="age1">:text</label><br>

                <input type="radio" id="element" name="selector" value="30">
                <label for="element">:radio</label><br>
                <input type="radio" id="class" name="selector" value="31">
                <label for="class">:checkbox</label><br>
                <input type="radio" id="Id" name="selector" value="32">
                <label for="Id">:submit</label><br>


            </div>

        </div>

        <div style="" class="flex-child right scrollbar scrollbar-primary" id="flex-child-right"></div>
    </div>







</body>

</html>


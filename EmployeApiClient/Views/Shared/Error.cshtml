
@{
    Layout = null; // Remove layout to focus on error page
}

<!DOCTYPE html>
<html>
<head>
    <title>Error</title>
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
        }

        .error-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .error-box {
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0,0,0,0.3);
            padding: 50px;
            border-radius: 10px;
        }

        .error-title {
            font-size: 40px;
            color: #ff4d4f;
            margin: 0;
        }

        .error-message {
            font-size: 18px;
            color: #333;
            margin: 20px 0;
        }

        .request-id {
            font-size: 14px;
            color: #666;
            margin-top: 20px;
            text-align: center;
        }

        .btn {
            display: inline-block;
            background-color: #ff4d4f;
            color: #fff;
            font-size: 18px;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            transition: all 0.2s ease-in-out;
            margin-top: 20px;
        }

            .btn:hover {
                background-color: #e8413d;
                cursor: pointer;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-box">
            <h1 class="error-title">Error.</h1>
            <h2 class="error-message">An error occurred while processing your request.</h2>
            <h2 class="error-message">Status Code: @ViewBag.ErrorStatusCode</h2>
            <h2 class="error-message"> @ViewBag.ErrorMessage</h2>
            @if (ViewBag.ShowRequestId)
            {
                <p class="request-id">
                    Request ID: <code>@ViewBag.RequestId</code>
                </p>
            }
            <a href="/" class="btn">Go back to homepage</a>
        </div>
    </div>
</body>
</html>

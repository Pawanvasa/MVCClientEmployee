@model IEnumerable<Employee>
@using Microsoft.AspNetCore.Mvc;
@using EmployeeApiConsumer.Models;

@{
    var depts = ViewBag.departments;
}

<style>

    body {
        font-family: Arial, Helvetica, sans-serif;
    }

    h1 {
        text-align: center;
        color: #007bff;
    }

    table {
        margin: 0 auto;
        width: 100%;
    }

    th, td {
        padding: 8px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #3445b4;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .alert-info {
        background-color: #3445b4;
        border: none;
        color: white;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        margin-right: 4px;
    }

        .alert-info:hover {
            background-color: #0069d9;
        }

    .alert-danger {
        background-color: #dc3545;
        border: none;
        color: white;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
    }

        .alert-danger:hover {
            background-color: #c82333;
        }

    .modal {
        display: none;
        position: fixed;
        z-index: 1;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        overflow: auto;
        background-color: rgba(0,0,0,0.4);
    }

    .modal-content {
        background-color: #fefefe;
        margin: 15% auto;
        padding: 20px;
        border: 1px solid #888;
        width: 30%;
        text-align: center;
    }

    .close {
        color: #aaa;
        float: right;
        font-size: 28px;
        font-weight: bold;
    }

        .close:hover,
        .close:focus {
            color: black;
            text-decoration: none;
            cursor: pointer;
        }

    #confirmDelete,
    #cancelDelete {
        background-color: #3445b4;
        border: none;
        color: white;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 8px;
        margin-right: 4px;
    }

        #confirmDelete:hover,
        #cancelDelete:hover {
            background-color: #3445b4;
        }

    #saveEdit,
    #cancelEdit {
        background-color: #3445b4;
        border: none;
        color: white;
        padding: 8px 12px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        border-radius: 4px;
        cursor: pointer;
        margin-top: 8px;
        margin-right: 4px;
    }

</style>

<h3 style="text-align:center;background-color: #3445b4;color:white;margin-left:2rem;margin-top:0.5rem;margin-right:0.5rem"> Employees </h3>
<input type="button" style="float: right; margin-right:5%;background-color: #50C878; padding: 5px ; border:none; border-radius:8%; color:white" onclick="getCreateForm()" value="Create New Employee">
<br />

<div class="table-container" @*style="margin:1rem;*@">
    <table style="background-color: aliceblue;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Phone No</th>
                <th>Salary</th>
                <th>Designation</th>
                <th>Date of birth</th>
                <th>Email</th>
                <th>Department</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>@item.Salary</td>
                    <td>@item.Designation</td>
                    @{
                        string dateStr = item.DateOfBirth.ToString()!;
                        DateTime date = DateTime.Parse(dateStr);
                        string formattedDate = date.ToString("M/d/yyyy");
                    }
                    <td>@*@item.DateOfBirth*@ @formattedDate</td>
                    <td>@item.Email</td>
                    @foreach (var dpt in depts)
                    {
                        if (item.DeptId == dpt.Id)
                        {
                            <td>@dpt.Name</td>
                        }
                    }
                    <td>
                        <input class="alert-info" type="submit" value="Edit" id="empid" onclick="EditEmployee(@item.Id,'@item.Name')" />
                        <input class="alert-danger" type="submit" value="Delete" id="empid" onclick="confirmation(@item.Id,'@item.Name')" />

                        <div id="deleteModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <p>
                                    Are you sure you want to delete <strong>
                                        <span id="empName"></span>?
                                    </strong>
                                </p>
                                <button id="confirmDelete">Yes</button>
                                <button id="cancelDelete">No</button>
                            </div>
                        </div>

                        <div id="editModal" class="modal">
                            <div class="modal-content">
                                <span class="close">&times;</span>
                                <p>
                                    Edit <strong>
                                        <span id="empNameEdit"></span>?
                                    </strong>
                                </p>
                                <form id="editForm">
                                    <label for="name">Name:</label>
                                    <input type="text" id="name" name="name" required>
                                    <br>

                                    <label for="PhoneNo">Phone:</label>
                                    <input type="text" id="PhoneNo" name="PhoneNo" value="@item.PhoneNumber" required><br>

                                    <label for="Salary">Salary:</label>
                                    <input type="number" id="Salary" name="Salary" value="@item.Salary"><br>

                                    <label for="Designation">Designation:</label>
                                    <input type="text" id="Designation" name="Designation" value="@item.Designation"><br>

                                    <label for="DateOfBirth">Date Of Birth:</label>
                                    <input type="date" id="DateOfBirth" value="@item.DateOfBirth" name="DateOfBirth" required /><br>

                                    <label for="email">Email:</label>
                                    <input type="email" id="email" name="email" value="@item.Email" required>
                                    <br>
                                    <label for="DeptId">Department:</label>
                                    <select name="DeptId" id="DeptId">
                                        @foreach (var dpt in depts)
                                        {
                                            Department dp = dpt;
                                            if (item.DeptId == dp.Id)
                                            {
                                                <option value="@item.DeptId">@dp.Name</option>
                                            }
                                        }
                                        @foreach (var dpt in depts)
                                        {
                                            Department dp = dpt;
                                            <option value="@dp.Id">@dp.Name</option>
                                        }
                                    </select><br>
                                    <button type="submit" id="saveEdit">Update</button>
                                    <button type="button" id="cancelEdit">Cancel</button>
                                </form>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
